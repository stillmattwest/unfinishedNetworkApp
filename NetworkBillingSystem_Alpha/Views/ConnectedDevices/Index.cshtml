@model IEnumerable<NetworkBillingSystem_Alpha.Models.BDI>


@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BDINumber)
        </th>
        <th>
            Device MAC Address
        </th>
        <th>
            Last Connection
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    foreach (var device in item.ConnectedDevices)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BDINumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => device.Mac)
            </td>
            <td>
                @Html.DisplayFor(modelItem => device.Connections.LastOrDefault().ConnectionDateTime)
            </td>
        </tr>
    }

}

</table>
