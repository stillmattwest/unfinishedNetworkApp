@model IEnumerable<NetworkBillingSystem_Alpha.Models.ConnectedDevice>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Mac)
        </th>
        <th>
            Last Connection
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Mac)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Connections.LastOrDefault().ConnectionDateTime)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ConnectedDeviceID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ConnectedDeviceID }) |
