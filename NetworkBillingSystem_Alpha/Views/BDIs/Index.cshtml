@model IEnumerable<NetworkBillingSystem_Alpha.Models.BDI>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BDINumber)
        </th>
        <th>
            Department Name
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BDINumber)
            </td>

            @{
                if (item.Department != null)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Department.Name)
                    </td>
                }
                else
                {
                    <td>
                        Unknown
                    </td>

                }
            }



            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BDIID }) |
                @Html.ActionLink("Details", "Details", new { id = item.BDIID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.BDIID })
            </td>
        </tr>
                }

</table>
