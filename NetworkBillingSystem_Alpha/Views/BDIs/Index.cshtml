@model IEnumerable<NetworkBillingSystem_Alpha.Models.BDI>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Interface Name
        </th>
        <th>
            Department
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BDINumber)
            </td>
            @if (item.Department == null)
            {
                <td>Unknown</td>
            }
            else
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
            }

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BDINumber }) |
                @Html.ActionLink("Details", "Details", new { id = item.BDINumber }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.BDINumber })
            </td>
        </tr>
    }

</table>
